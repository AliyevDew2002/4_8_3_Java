            android:background="#00FFD9">

        </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FF0000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <FrameLayout
            android:id="@+id/secondFragment"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="#00FFD9">
        </FrameLayout>

    </LinearLayout>





    </LinearLayout>

